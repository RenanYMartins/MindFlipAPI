{
  "compilerOptions": {
    "target": "ES2021",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@tests/*": ["tests/*"]
    },
    "typeRoots": ["./src/shared/types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist"]
}
